<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/white">

    <!-- Main Horizontal Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="10">

        <!-- Product Image Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/product_img_cart"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img6599" />
        </androidx.cardview.widget.CardView>

        <!-- Product Details Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <!-- Product Title -->
            <TextView
                android:id="@+id/product_title_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eau de Toilette - Premium Fragrance"
                android:textColor="@color/md_black_1000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Additional Information -->
            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A luxurious fragrance that lasts all day long. Perfect for every occasion."
                android:textColor="@color/md_grey_700"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <!-- Product Price -->
            <TextView
                android:id="@+id/product_price_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â‚¹1199"
                android:textColor="@color/md_red_700"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
